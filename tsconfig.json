{
    "compilerOptions": {
        "paths": {
            "src/*": ["./src/*"]
        },
        "baseUrl": ".",
        "inlineSourceMap": true,
        "inlineSources": true,
        "module": "ESNext",
        "target": "ES2020",
        "verbatimModuleSyntax": true,
        "allowJs": true,
        "noImplicitAny": true,
        "moduleResolution": "node",
        "importHelpers": true,
        "allowSyntheticDefaultImports": true,
        "lib": ["dom", "es5", "scripthost", "es2020"]
    },
    "include": ["**/*.ts"]
}
